{
  "name": "praca-website",
  "version": "0.1.0",
  "private": true,
  "author": "pierreyoda <pierreyoda@users.noreply.github.com>",
  "scripts": {
    "fetch:projects": "npx cross-env DEBUG=praca:* npx ts-node --project tsconfig.node.json ./src/api/fetcher.ts",
    "fetch": "yarn fetch:projects",
    "dev": "npx next dev",
    "build": "yarn fetch && npx cross-env ANALYSE=true next build",
    "start": "npx next start",
    "docker:build": "git describe --tags --always | xargs -I {} docker image build -f Dockerfile -t praca/website:{} .",
    "docker:tag": "git describe --tags --always | xargs -I {} docker image tag praca/website:{} praca/website:latest",
    "docker:run": "docker run -p 3000:3000 praca/website:latest",
    "docker": "yarn docker:build && yarn docker:tag && yarn docker:run",
    "lint": "npx eslint . --ext js --ext ts --ext tsx",
    "lint:fix": "yarn lint --fix",
    "format": "npx pretty-quick",
    "postinstall": "npx husky install"
  },
  "dependencies": {
    "clsx": "1.1.1",
    "debug": "4.3.1",
    "lodash.orderby": "4.6.0",
    "next": "11.0.0",
    "next-mdx-remote": "3.0.2",
    "next-svgr": "0.0.2",
    "node-emoji": "1.10.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remark-emoji": "2.2.0",
    "remark-shiki-twoslash": "2.0.1",
    "shiki-twoslash": "2.0.3"
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@fec/remark-a11y-emoji": "3.1.0",
    "@next/bundle-analyzer": "11.0.0",
    "@octokit/rest": "18.6.0",
    "@tailwindcss/typography": "0.4.1",
    "@types/debug": "4.1.5",
    "@types/lodash.orderby": "4.6.6",
    "@types/node": "15.12.4",
    "@types/node-emoji": "1.8.1",
    "@types/react": "17.0.11",
    "@typescript-eslint/eslint-plugin": "4.28.0",
    "@typescript-eslint/parser": "4.28.0",
    "autoprefixer": "10.2.6",
    "chalk": "4.1.1",
    "cross-env": "7.0.3",
    "dotenv": "10.0.0",
    "eslint": "7.29.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-next": "^11.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "6.0.0",
    "postcss": "8.3.5",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-preset-env": "6.7.0",
    "prettier": "2.3.1",
    "pretty-quick": "3.1.1",
    "sass": "1.35.1",
    "strip-bom-stream": "4.0.0",
    "tailwindcss": "2.2.2",
    "ts-node": "10.0.0",
    "typescript": "4.3.4"
  }
}
