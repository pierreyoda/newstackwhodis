{
  "name": "prava-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npx cross-env ANALYSE=true next build",
    "start": "next start",
    "docker:build": "git describe --tags --always | xargs -I {} docker image build -f Dockerfile -t prava/website:{} .",
    "docker:tag": "git describe --tags --always | xargs -I {} docker image tag prava/website:{} prava/website:latest",
    "docker:run": "docker run -p 3000:3000 prava/website:latest",
    "docker": "yarn docker:build && yarn docker:tag && yarn docker:run"
  },
  "dependencies": {
    "next": "10.0.5",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@mdx-js/loader": "^1.6.22",
    "@next/bundle-analyzer": "^10.0.5",
    "@next/mdx": "^10.0.5",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "autoprefixer": "^10.2.3",
    "cross-env": "^7.0.3",
    "postcss": "^8.2.4",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^6.7.0",
    "strip-bom-stream": "^4.0.0",
    "tailwindcss": "^2.0.2",
    "typescript": "^4.1.3"
  }
}
